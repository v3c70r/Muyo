{
    "configurations": {
        "helloVulakn: Launch": {
            "adapter": "vscode-cpptools",
            "configuration": {
                "name": "vulkanTutorial",
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceRoot}/build/helloVulkan",
                "cwd": "${workspaceFolder}/build",
                "externalConsole": false,
                "linux": {
                    "setupCommands": [
                        {
                            "description": "Enable pretty-printing for gdb",
                            "text": "-enable-pretty-printing",
                            "ignoreFailures": true
                        },
                        {
                            "description": "Auto load symbols when loading an .so file",
                            "text": "set auto-solib-add",
                            "ignoreFailures": false
                        }
                    ],
                    "MIkode": "gdb"
                },
                "osx": {
                    "MIMode": "lldb"
                }
            }
        },
        "helloVulkan: Attach": {
            "adapter": "vscode-cpptools",
            "configuration": {
                "name": "helloVulkan: Attach",
                "type": "cppdbg",
                "request": "attach",
                "program": "${workspaceRoot}/build/helloVulkan",
                "MIMode": "lldb"
            }
        }
    }
}
